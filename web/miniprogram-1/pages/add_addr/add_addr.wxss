.top-back {
  width: 750rpx;
  height: 297rpx;
  padding-top: 1px;
  background-color: #5537FB;
  padding-top: 1px;
  box-sizing: border-box;
}

.page {
  background-color: #F5F6FD;
}

.top-back view {
  margin-top: 162rpx;
  color: #fff;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  font-family: 'SourceHanSansCN-Normal';
}

.form-box {
  width: 628rpx;
  height: 790rpx;
  z-index: 2;
  margin: -60rpx auto;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 6rpx #F2F3FB, -5rpx 6rpx #F2F3FB;
}

.form-content {
  width: 502rpx;
  height: 660rpx;
  display: flex;
  flex-direction: column;
  margin-top: 53rpx;
  background-color: #fff;
}

.form-input {
  width: 100%;
  height: 51rpx;
  margin-bottom: 27rpx;
  display: flex;
}

.name {
  width: 95rpx;
  font-size: 18rpx;
  height: 51rpx;
  display: flex;
  flex-direction: column;
}

.lang-e {
  font-size: 12rpx;
}

.input {
  width: 387rpx;
  height: 51rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.sub {
  width: 305rpx !important;
  height: 68rpx !important;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  margin-top: 388rpx;
  background-color: #70C7C7;
  border-radius: 40rpx;
}

.addr-box {
  width: 120rpx;
  height: 51rpx;
  border: none;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}
.addr-box input{
    width: 83rpx;
    height: 51rpx;
    border: none;
}
.addr-box view{
  font-size: 16rpx;
  font-family: 'SourceHanSansCN-Normal';
}

.add-text{
  font-size: 16rpx;
}
