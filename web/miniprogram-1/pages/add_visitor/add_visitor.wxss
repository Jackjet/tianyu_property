/* pages/add_visitor/add_visitor.wxss */
page {
  background-color: #F5F6FF;
}
.plate {
  height: 240rpx;
  width: 100%;
  background-color: #5537FB;
}
.form {
  width: 80%;
  position: absolute;
  left: 10%;
  top: 120rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  background-color: #fff;
  font-size: 30rpx;
}
.form>view {
  display: flex;
  padding: 50rpx 0;
  border-bottom: 1px solid #aaa;
}
.form .label {
  line-height: 2;
  position: relative;
}
.form .label::before {
  content: '*';
  color: #f00;
  position: absolute;
  left: -20rpx;
  top: 6rpx;
}
.timePicker {
  line-height: 2;
}
.form .theSubmit {
  display: block;
  width: 60%;
  margin-top: 0 auto;
  font-size: 30rpx;
  border-radius: 40rpx;
  padding: 10rpx 0;
  background-color: #70C7C7;
}