/* pages/pending_history_info/pending_history_info.wxss */
page{
  background-color: rgb(243, 243, 243);
}
.tab-main-top{
  box-sizing: border-box;
  width: 100%;
  height: 250rpx;
  padding: 20rpx;
  position: relative;
  padding-left: 150rpx;
  background-color: #5537FB;
}
.item-header {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  background-color: #5bb590;
  color: #fff;
  line-height: 146rpx;
  text-align: center;
  font-size: 50rpx;
  margin: 5rpx auto;
}
.item-header image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
}
.roundline{
  border: 1px solid #5062DD;
  border-radius: 50%;
  position: absolute;
  left: 115rpx;
  top: 70rpx;
  width: 160rpx;
  height: 160rpx;
}
.visitorname{
  position: absolute;
  left: 320rpx;
  top: 100rpx;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}
.agree{
  position: absolute;
  left: 320rpx;
  top: 180rpx;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}
.tab-main-body{
  width: 80%;
  margin: 80rpx auto 0rpx;
}
.tab-main-item{
  width: 86%;
  background-color: #fff;
  margin-top: 10rpx;
  padding: 40rpx;
  display: flex;
}
.itemL{
  margin-left: 20rpx;
  width: 200rpx;
}
.itemR{
  width: 350rpx;
  overflow: hidden;
  
  margin-left: 30rpx;
  font-size: 28rpx;
  font-weight: 100;
  color: #333;
  line-height: 60rpx;
}
.visittime{
  font-size: 30rpx;
  letter-spacing: 4rpx;
}
.eng{
  font-size: 24rpx;
}
.tab-main-bottom{
  position: relative;
  padding: 30rpx 0;
  text-align: center;
}
.tab-main-bottom .btn{
  display: block;
  width: 50%;
  margin-top: 0 auto;
  font-size: 30rpx;
  border-radius: 40rpx;
  padding: 10rpx 0;
  background-color: #70C7C7;
  border: 0;
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  font-weight: 200;
  position: absolute;
  left: 25%;
  top: 50rpx;
}
.tab-main-bottom .agree{
  background-color: #70C7C7;
}
.tab-main-bottom .refuse{
  background-color: #FA7180;
}
.vshow {
  display: block;
}
.vhidden {
  display: none;
}